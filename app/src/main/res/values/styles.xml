<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextFields_EditTextStyle">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#11FF00</item>
        <item name="android:ems">30</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextFields_EditTextStyle.Username">
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="TextFields_EditTextStyle.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="TextFields_EditTextStyle.EmailAddress">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="TextFields_EditTextStyle.Date">
        <item name="android:inputType">date</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="ButtonStyle.Style1">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ButtonStyle.Style2">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ButtonStyle.Style2.Class1">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="CardDetailsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="CardDetailsTextView.PD">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PurchasesDetailsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="PurchasesDetailsTextView.PD">
        <item name="android:textColor">@android:color/black</item>
    </style>



    <style name="BigTitleStyle">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <!--<item name="android:layout_marginTop">10dp</item>-->
        <item name="android:textColor">#3F51B5</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BigTitleStyle.Style1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BigTitleStyle.Style2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PayModeImages">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_gravity">center</item>
        <!--<item name="android:layout_marginTop">15dp</item>-->
    </style>

    <style name="PayModeImages.Ex">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="myTheme1">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:colorBackground">@color/teal_a200</item>
        <item name="android:imageWellStyle">@style/CardView.Dark</item>
    </style>

    <style name="myTheme2">
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="myTheme3" parent="Theme.AppCompat.DayNight.Dialog" >
        <item name="android:colorBackground">@color/teal_a200</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>
