<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/cartProducts"
    tools:context=".activities.CartClothesActivity">

    <TextView
        android:id="@+id/yourShoppingCardTitle"
        style="@style/BigTitleStyle.Style2"
        android:text="@string/your_shopping_card" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listOfObjCartText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PurchasesListTextView"
            android:layout_marginTop="0dp"
            android:textStyle="bold"
            android:text="@string/clothInCar" />

        <Button
            android:id="@+id/btnShowObjCart"
            style="@style/ButtonStyle.Style2.Class2"
            android:text="@string/showCloInCart"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/lvCardItems"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="false"
        android:layout_weight="1"
        android:visibility="invisible"
        >

    </ListView>
    <Button
        android:id="@+id/btnRealizarCompra"
        style="@style/ButtonStyle.Style2.Class1"
        android:text="@string/buy_products"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btnVolverCatalogo"
        style="@style/ButtonStyle.Style2.Class1"
        android:text="@string/cart_back_to_catalog"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>


</LinearLayout>