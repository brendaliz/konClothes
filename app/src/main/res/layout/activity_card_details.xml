<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CardDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">


            <ImageView
                android:id="@+id/cdBackToPurchaseDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@android:drawable/ic_delete" />

            <TextView
                android:id="@+id/DetallesTarjeta"
                style="@style/BigTitleStyle.Style2"
                android:text="@string/card_details_title"/>

            <TextView
                android:id="@+id/cardNumber"
                style="@style/CardDetailsTextView"
                android:text="@string/card_number" />

            <EditText
                android:id="@+id/card_number"
                style="@style/TextFields_EditTextStyle.EmailAddress"
                android:hint="@string/insert_card_nmber"
                 />

            <TextView
                android:id="@+id/NameInCard"
                style="@style/CardDetailsTextView"
                android:text="@string/card_name" />

            <EditText
                android:id="@+id/nombre_tarjeta"
                style="@style/TextFields_EditTextStyle.Password"
                android:hint="@string/insert_card_name"
                />
            <TextView
                android:id="@+id/ExpDate"
                style="@style/CardDetailsTextView"
                android:text="@string/card_expiration_date"
                />

            <EditText
                android:id="@+id/insertCardExpirationDate"
                style="@style/TextFields_EditTextStyle.Date"
                android:hint="@string/insert_card_expiration_date"
                />

            <TextView
                android:id="@+id/cVV"
                style="@style/CardDetailsTextView"
                android:text="@string/card_security_code" />

            <EditText
                android:id="@+id/safeCode"
                style="@style/TextFields_EditTextStyle.Password"
                android:hint="@string/insert_cvv"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >


                <Button
                    android:id="@+id/btnComprar"
                    style="@style/ButtonStyle.Style2.Class1"
                    android:text="@string/confirm_purchase"
                     />

            </LinearLayout>

        </LinearLayout>



    </ScrollView>

</LinearLayout>