<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_diseno"
    tools:context=".activities.Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="54dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icono"
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@mipmap/ic_launcher_icon" />

            <TextView
                android:id="@+id/konClothesTitle"
                style="@style/BigTitleStyle.Style1"
                android:text="@string/app_name" />

            <EditText
                android:id="@+id/username"
                style="@style/TextFields_EditTextStyle.Username"
                android:background="@color/colorLavander"
                android:hint="@string/username" />

            <EditText
                android:id="@+id/passwordText"
                style="@style/TextFields_EditTextStyle.Password"
                android:background="@color/colorLavander"
                android:hint="@string/password" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAcceder"
                    style="@style/ButtonStyle.Style1"
                    android:background="@color/colorLavanderDark"
                    android:text="@string/access" />

                <Button
                    android:id="@+id/btnRegistrarse"
                    style="@style/ButtonStyle.Style1"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorLavanderDark"

                    android:text="@string/register" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <Button
                    android:id="@+id/btnFacebook"
                    style="@style/ButtonStyle.Style2.Class1"
                    android:layout_height="58dp"
                    android:background="@drawable/facebook_button" />

                <Button
                    android:id="@+id/btnGmail"
                    style="@style/ButtonStyle.Style2.Class1"
                    android:layout_height="58dp"
                    android:background="@drawable/gmail_button" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>
